---
const icon = "/icons/generalSections/007-airplane.png";
const trailfindersLogo = "/honeymoon/trailfinders.webp";

const { id } = Astro.props;

const destinations = [
  { src: "/honeymoon/singapore.jpg", caption: "Singapore" },
  { src: "/honeymoon/melbourne.jpg", caption: "Melbourne" },
  { src: "/honeymoon/byron-bay.jpg", caption: "Byron Bay" },
  { src: "/honeymoon/auckland.jpg", caption: "Auckland" },
];
---

<div id={id} class="section-block">
    <h3 class="section-title">Gifts</h3>
    <div class="section-content">
        <img class="section-icon" src={icon} alt="Airplane" />
        <div class="section-content-text-block">
            <p class="section-content-text">
                Your presence at our wedding is the greatest gift we could ask for,
                and we truly mean that. Please don't feel any obligation at all!
            </p>
            <p class="section-content-text">
                However, if you would like to contribute towards our honeymoon to
                Singapore, Melbourne, Byron Bay, and Auckland, we have set up a
                wishlist with Trailfinders.
            </p>
        </div>
        <img class="section-icon icon-ghost" src={icon} alt="" />
    </div>

    <div class="trailfinders-callout">
        <img class="trailfinders-logo" src={trailfindersLogo} alt="Trailfinders" />
        <p>
            To contribute, visit the Trailfinders wishlist and enter the details below:
        </p>
        <div class="trailfinders-details">
            <p><strong>Reference:</strong>5BN60A</p>
            <p><strong>Surname:</strong>Mason</p>
        </div>
        <a class="nav-button trailfinders-link" href="https://www.trailfinders.com/wishlist#/" target="_blank" rel="noopener noreferrer">
            Visit Trailfinders Wishlist
        </a>
    </div>

    <div class="destination-grid">
        {destinations.map(({ src, caption }) => (
            <div class="destination-card">
                <img src={src} alt={caption} />
                <span>{caption}</span>
            </div>
        ))}
    </div>
</div>

<style>
    .trailfinders-callout {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        margin: 2rem auto;
        padding: 1.5rem 2rem;
        border: 1px solid var(--color-border);
        border-radius: 12px;
        max-width: 28rem;
    }

    .trailfinders-logo {
        max-width: 10rem;
        margin-bottom: 1rem;
    }

    .trailfinders-details {
        margin: 1rem 0;
        padding: 0.75rem 1.5rem;
        background: rgba(150, 151, 48, 0.08);
        border-radius: 8px;
    }

    .trailfinders-details p {
        margin: 0.25rem 0;
    }

    .trailfinders-link {
        margin-top: 1rem;
    }

    .destination-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        margin: 2rem 1rem;
    }

    .destination-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .destination-card img {
        width: 100%;
        aspect-ratio: 4 / 3;
        object-fit: cover;
        border-radius: 8px;
    }

    .destination-card span {
        margin-top: 0.5rem;
        font-weight: 600;
        color: var(--color-heading);
    }

    @media screen and (max-width: 768px) {
        .destination-grid {
            grid-template-columns: 1fr;
            max-width: 20rem;
            margin: 2rem auto;
        }
    }
</style>
