---
const { href, ariaLabel, text } = Astro.props;
const parts = (text as string).split(" / ");
---

<span class="container">
    <a class="section-link" aria-label={ariaLabel} {href}>
        <span class="section-link-text">
            {parts.map((part: string, i: number) => (
                i < parts.length - 1
                    ? <>{part} /<br class="slash-break" /> </>
                    : <>{part}</>
            ))}
        </span>
    </a>
</span>

<style>
    .container {
        display: inline-block;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.5rem;
    }

    .section-link {
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: inherit;
        font-size: 1.2rem;
        font-weight: 500;
        line-height: 1.5rem;
        margin-right: 1rem;
    }

    .section-link-text {
        flex: 1;
        text-align: center;
    }

    .slash-break {
        display: none;
    }

    @media (max-width: 720px) {
        .slash-break {
            display: inline;
        }
    }
</style>