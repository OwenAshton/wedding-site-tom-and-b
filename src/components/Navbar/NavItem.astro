---
const { href, ariaLabel, text, subDetails } = Astro.props;
const parts = (text as string).split(" / ");
const details = (subDetails as string[] | undefined) ?? [];
---

<span class="container">
    <a class="section-link" aria-label={ariaLabel} {href}>
        <span class="section-link-text">
            {parts.map((part: string, i: number) => (
                i < parts.length - 1
                    ? <>{part} /<br class="slash-break" /> </>
                    : <>{part}</>
            ))}
            {details.length > 0 && (
                <span class="sub-details">
                    {details.join(" Â· ")}
                </span>
            )}
        </span>
    </a>
</span>

<style>
    .container {
        display: inline-block;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.5rem;
    }

    .section-link {
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: inherit;
        font-size: 1.2rem;
        font-weight: 500;
        line-height: 1.5rem;
        margin-right: 1rem;
    }

    .section-link-text {
        flex: 1;
        text-align: center;
    }

    .sub-details {
        display: block;
        font-size: 0.65rem;
        font-weight: 400;
        opacity: 0.75;
        letter-spacing: 0.05em;
        margin-top: 0.15rem;
    }

    .slash-break {
        display: none;
    }

    @media (max-width: 720px) {
        .slash-break {
            display: inline;
        }
    }
</style>
