---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Welcome from "../components/Welcome.astro";
import NavButton from "../components/NavButton.astro";
import { navbarProperties } from "../lib/navbarProperties";

const welcomeSectionId = "welcome-section";

---

<Layout title="Tom & Bryony 2026">
	<!-- Shown while we check auth -->
	<main id="checking" class="p-6">
		<h1>Checking accessâ€¦</h1>
	</main>

	<!-- Hidden until access granted -->
	<main id="content" class="hidden">
		<Hero />
		<h1>Tom & Bryony</h1>
		<h2>27th June 2026</h2>

		<Welcome id={welcomeSectionId} />

		<ul role="list" class="section-layout">
		{navbarProperties.map(({ href, text, "aria-label": ariaLabel }) => (
			<li>
				<NavButton href={href} aria-label={ariaLabel}>
					{text}
				</NavButton>
			</li>
		))}
		</ul>
	</main>

	<script>
		import { requireInvited } from "../lib/requireInvite";
		import { supabase } from "../lib/supabaseClient";

		(async () => {
			const checking = document.getElementById("checking");
			const content = document.getElementById("content");

			const ctx = await requireInvited();
			if (!ctx) return; 

			const { groupId } = ctx;
			const { data: rsvp } = await supabase
				.from("rsvp")
				.select("group_id")
				.eq("group_id", groupId)
				.maybeSingle();

			// if (!rsvp) {
			// 	window.location.replace("/rsvp");
			// 	return;
			// }

			// Show the page
			checking.classList.add("hidden");
			content.classList.remove("hidden");
    	})();
  	</script>
</Layout>

<style>
	:root {
	}

	.hidden { display: none; }
	
</style>
