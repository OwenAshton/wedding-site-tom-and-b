  <body class="p-6">
    <p id="msg">Checking access…</p>

    <script type="module">
      import { requireInvited } from "../lib/requireInvited";

      (async () => {
        const ctx = await requireInvited();
        if (!ctx) {
          // requireInvited already redirected
          return;
        }

        // User is logged in + invited
        window.location.replace("/rsvp");
      })();
    </script>
  </body>
