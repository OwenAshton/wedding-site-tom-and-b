---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Access not available">
  <h1>Access not available</h1>
  <p>
    This email address isn't on the guest list. If you think this is a mistake,
    contact the host.
  </p>

  <button id="signout" class="nav-button signout-btn">Sign out</button>

  <script>
    import { supabase } from "../lib/supabaseClient";
    document.getElementById("signout").addEventListener("click", async () => {
      await supabase.auth.signOut();
      window.location.replace("/login-error");
    });
  </script>
</Layout>

<style>
  .signout-btn {
    margin-top: 1.5rem;
    max-width: 12rem;
  }
</style>
