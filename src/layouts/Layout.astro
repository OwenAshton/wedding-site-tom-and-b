---
import "../styles/global.css";
import Navbar from "../components/Navbar/Navbar.jsx";
import NavItem from "../components/Navbar/NavItem.astro";
import { navbarProperties } from "../lib/navbarProperties";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta name="robots" content="noindex" />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/Logo.PNG" />
		<title>{title}</title>
	</head>

	<body>
		<Navbar client:load>
			{
				navbarProperties.map(
					({ href, text, "aria-label": ariaLabel, subDetails }) => (
						<NavItem {text} href={href} aria-label={ariaLabel} subDetails={subDetails}>
							{text}
						</NavItem>
					)
				)
			}
		</Navbar>
		<main>
			<slot />
		</main>

		<style>
			@font-face {
				font-family: "Adelia";
				src: url("/fonts/adelia-webfont.woff") format("woff");
				font-weight: normal;
				font-style: normal;
				font-display: swap;
			}

			@font-face {
				font-family: "HomemadeApple";
				src: url("/fonts/HomemadeApple-Regular.ttf") format("truetype");
				font-weight: normal;
				font-style: normal;
				font-display: swap;
			}

			@font-face {
				font-family: "Lanenar";
				src: url("/fonts/lanenar-webfont.woff") format("woff");
				font-weight: normal;
				font-style: normal;
				font-display: swap;
			}

			html {
				font-family: "Lanenar", sans-serif;
				font-size: var(--font-size-base);
				color: var(--color-text);
				background-color: var(--color-bg);
			}

			:global(html) {
				scroll-behavior: smooth;
			}

			@media (prefers-reduced-motion: reduce) {
				:global(html) {
					scroll-behavior: auto;
				}
			}

			body {
				margin: 0;
				padding-top: 3rem;
				text-align: justify;
				text-justify: inter-word;
			}

			:global(h1) {
				font-size: var(--font-size-xl);
				font-family: "HomemadeApple";
				color: var(--color-heading);
			}

			:global(h2) {
				display: block;
				font-size: var(--font-size-lg);
				font-family: "Lanenar";
				color: var(--color-heading);
			}

			:global(h3) {
				font-size: var(--font-size-lg);
				font-family: "HomemadeApple";
				color: var(--color-heading);
			}

			:global(h4) {
				font-family: "Lanenar";
				margin-bottom: 0;
			}

			:global(ul) {
				margin: 1rem;
			}
			:global(code) {
				font-family: "Lanenar", "HomemadeApple", Menlo, Monaco, Lucida Console,
					Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono,
					Courier New, monospace;
			}

			.footer {
				font-size: smaller;
				font-style: ;
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				margin-top: 2rem;
			}
		</style>
	</body>
	<hr />
</html>
